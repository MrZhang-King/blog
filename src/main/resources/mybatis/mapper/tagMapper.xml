<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- tag -->
<mapper namespace="com.zb.blog.mapper.TagMapper">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="tagMap" type="tag">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="tag_name" property="tagName" jdbcType="VARCHAR" />
        <result column="blog_count" property="blogCount" jdbcType="INTEGER" />
        <result column="tag_state" property="tagState" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->
    
    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        t.id, t.tag_name, t.blog_count, t.tag_state, t.create_time, t.update_time
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->
    
    <!-- 查询所有数据 -->
    <select id="findTagAll" resultMap="tagMap">
        SELECT
        <include refid="allColumns" />
        FROM tag t
    </select>
    
    <!-- 根据条件参数查询数据列表 -->
    <select id="findTagByCondition" resultMap="tagMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM tag t WHERE 1 = 1
        <if test="tagName != null and tagName != ''">
            AND t.tag_name = #{tagName}
        </if>
        <if test="blogCount != null">
            AND t.blog_count = #{blogCount}
        </if>
        <if test="tagState != null">
            AND t.tag_state = #{tagState}
        </if>
        <if test="createTime != null">
            AND t.create_time = #{createTime}
        </if>
        <if test="updateTime != null">
            AND t.update_time = #{updateTime}
        </if>
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findTagByIds" resultMap="tagMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM tag t WHERE t.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!--    对应key和value；方便handler处理-->
    <resultMap id="mapResult" type="HashMap">
        <id column="id" property="id" />
        <result column="tag_name" property="tagName" />
        <result column="blog_count" property="blogCount" />
        <result column="tag_state" property="tagState" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!--    查询,通过handler处理为map-->
    <select id="selectTagToMap" resultMap="mapResult">
        SELECT
        <include refid="allColumns" />
        FROM tag t
    </select>

    <!--    将查询到的标签按照博客数量进行排序-->
    <select id="orderTag" parameterType="string" resultMap="tagMap">
        SELECT
        <include refid="allColumns" />
        FROM tag t WHERE t.tag_state = 0 order by t.blog_count ${descOrAsc}
    </select>
    <!-- 插入数据 -->
    <insert id="insertTag" parameterType="map">
        INSERT INTO tag (
            id, tag_name, blog_count, tag_state, create_time, update_time
        ) VALUES (
            #{id},
            #{tagName},
            #{blogCount},
            #{tagState},
            #{createTime},
            #{updateTime}
        )
    </insert>
    
    <!-- 批量插入数据 -->
    <insert id="insertTags" parameterType="list">
        INSERT INTO tag (
            id, tag_name, blog_count, tag_state, create_time, update_time
        ) VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.id},
                #{item.tagName},
                #{item.blogCount},
                #{tagState},
                #{createTime},
                #{updateTime}
            )
        </foreach>
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateTag" parameterType="map">
        UPDATE tag
        <set>
            <if test="tagName != null">
                tag_name = #{tagName},
            </if>
            <if test="blogCount != null">
                blog_count = #{blogCount},
            </if>
            <if test="tagState != null">
                tag_state = #{tagState},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 批量修改数据 -->
    <update id="updateTags" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE tag
            <set>
                <if test="item.tagName != null">
                    tag_name = #{item.tagName},
                </if>
                <if test="item.blogCount != null">
                    blog_count = #{item.blogCount},
                </if>
                <if test="tagState != null">
                    tag_state = #{tagState},
                </if>
                <if test="createTime != null">
                    create_time = #{createTime},
                </if>
                <if test="updateTime != null">
                    update_time = #{updateTime}
                </if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deleteTagById" parameterType="int">
        DELETE FROM tag WHERE id = #{id}
    </delete>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteTagByIds" parameterType="list">
        DELETE FROM tag WHERE id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>